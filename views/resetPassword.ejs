<% layout('./layouts/baseTemplate') %>
<% block('head').append(`<link rel="stylesheet" href="/styles/resetPassword.css" />`) %>
<div class="reset-main-container">
    <div class="wrapper">
        <form id="reset-form">
            <h1>Reset Password</h1>
                <!-- Error Message -->
                <p class="error-message" id="error-message"></p>
                <input type="text" value=<%= resetToken %> id="reset-token" hidden>
                <div class="input-box">
                    <input
                        type="password"
                        placeholder="new Password"
                        name="password"
                        required
                        id="password"
                        />
                        <i class="bx bxs-lock-alt"></i>
                    </div>
                    <div class="input-box">
                        <input
                        type="password"
                        placeholder="confirm password"
                        name="confirmPassword"
                        id="confirm-password"
                        required
                    />
                    <i class="bx bxs-lock-alt"></i>
                </div>
                <button type="submit" class="btn">Reset Password</button>
            </form>
        </div>
    </div>