<% layout('./layouts/baseTemplate') %>

<div class="sign-up-main-container">
    <div class="wrapper">
        <form action="" id="signup-form" autocomplete="off">
            <h1>Sign Up</h1>
        <p id="error-message" class="error-message"></p>
    <div class="input-box">
        <input
    type="text"
placeholder="full name"
name="name"
id="name"
required
/>
<i class="bx bxs-user"></i>
</div>
<div class="input-box">
    <input
type="email"
placeholder="email"
required
name="email"
id="email"
/>
<i class="bx bxs-envelope"></i>
</div>
<div class="input-box">
    <input
type="password"
placeholder="password"
name="password"
id="password"
required
/>
<i class="bx bxs-lock-alt"></i>
</div>
<div class="input-box">
    <input
type="password"
placeholder="confirm Password"
name="confirmPassword"
id="confirmPassword"
required
/>
<i class="bx bxs-lock-alt"></i>
</div>
<button class="sign-up-btn">Sign up</button>
<div class="login-link">
    <p>Already have an account?<a href="/login">Login</a></p>
    </div>
  </form>
</div>
<div class="alert-wrapper" id="alert">
    <div class="alert content">
        <p>Otp send Success fully</p>
    </div>
</div>
</div>